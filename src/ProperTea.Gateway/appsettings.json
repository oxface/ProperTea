{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "Authentication": {
    "Authority": "https://your-auth-server.com",
    "Audience": "propertea-api"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:6001",
      "https://localhost:6002",
      "https://localhost:6003",
      "https://localhost:6004"
    ]
  },
  "RateLimiting": {
    "GlobalLimit": 100,
    "WindowMinutes": 1
  },
  "ReverseProxy": {
    "Routes": {
      "organization-route": {
        "ClusterId": "organization-cluster",
        "Match": {
          "Path": "/api/organizations/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/organizations/{**catch-all}" }
        ]
      },
      "user-management-route": {
        "ClusterId": "user-management-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/users/{**catch-all}" }
        ]
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/identities/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/identities/{**catch-all}" }
        ]
      },
      "workflow-orchestrator-route": {
        "ClusterId": "workflow-orchestrator-cluster",
        "Match": {
          "Path": "/api/orchestrators/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "property-route": {
        "ClusterId": "property-cluster",
        "Match": {
          "Path": "/api/properties/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/properties/{**catch-all}" }
        ]
      },
      "rental-object-route": {
        "ClusterId": "rental-object-cluster",
        "Match": {
          "Path": "/api/rental-objects/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/rental-objects/{**catch-all}" }
        ]
      },
      "rental-contract-route": {
        "ClusterId": "rental-contract-cluster",
        "Match": {
          "Path": "/api/rental-contracts/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/rental-contracts/{**catch-all}" }
        ]
      },
      "vacancies-route": {
        "ClusterId": "vacancies-cluster",
        "Match": {
          "Path": "/api/vacancies/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/vacancies/{**catch-all}" }
        ]
      },
      "tenant-route": {
        "ClusterId": "tenant-cluster",
        "Match": {
          "Path": "/api/tenants/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/tenants/{**catch-all}" }
        ]
      },
      "application-route": {
        "ClusterId": "application-cluster",
        "Match": {
          "Path": "/api/applications/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/applications/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "organization-cluster": {
        "Destinations": {
          "organization-destination": {
            "Address": "https://organization-api"
          }
        }
      },
      "user-management-cluster": {
        "Destinations": {
          "user-management-destination": {
            "Address": "https://user-management-api"
          }
        }
      },
      "identity-cluster": {
        "Destinations": {
          "identity-destination": {
            "Address": "https://identity-api"
          }
        }
      },
      "workflow-orchestrator-cluster": {
        "Destinations": {
          "workflow-orchestrator-destination": {
            "Address": "https://workflow-orchestrator"
          }
        }
      },
      "property-cluster": {
        "Destinations": {
          "property-destination": {
            "Address": "https://property-api"
          }
        }
      },
      "rental-object-cluster": {
        "Destinations": {
          "rental-object-destination": {
            "Address": "https://rental-object-api"
          }
        }
      },
      "rental-contract-cluster": {
        "Destinations": {
          "rental-contract-destination": {
            "Address": "https://rental-contract-api"
          }
        }
      },
      "vacancies-cluster": {
        "Destinations": {
          "vacancies-destination": {
            "Address": "https://vacancies-api"
          }
        }
      },
      "tenant-cluster": {
        "Destinations": {
          "tenant-destination": {
            "Address": "https://tenant-api"
          }
        }
      },
      "application-cluster": {
        "Destinations": {
          "application-destination": {
            "Address": "https://application-api"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
